<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DeviceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备信息"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/device_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备信息加载中..."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- 摄像头测试部分 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摄像头测试"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0">

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/camera_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="摄像头未启动"
            android:textSize="16sp"
            android:textColor="#666666" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/start_camera_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启动摄像头"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/stop_camera_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止摄像头"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

    <!-- 麦克风测试部分 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麦克风测试"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/start_microphone_test_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始麦克风测试"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/stop_microphone_test_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止麦克风测试"
            android:layout_marginStart="4dp"
            android:enabled="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/microphone_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="麦克风测试未启动"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/microphone_volume_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:visibility="gone" />

    <!-- 扬声器测试部分 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扬声器测试"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/start_speaker_test_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始扬声器测试"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/stop_speaker_test_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止扬声器测试"
            android:layout_marginStart="4dp"
            android:enabled="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/speaker_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扬声器测试未启动"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="16dp" />

</LinearLayout>