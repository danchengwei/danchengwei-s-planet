<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".WebRtcActivity">

    <!-- 远程视频显示区域 -->
    <FrameLayout
        android:id="@+id/remote_video_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/control_panel">

        <!-- 远程视频 SurfaceView -->
        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/remote_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 本地视频小窗口 -->
        <FrameLayout
            android:id="@+id/local_video_container"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="#666666">

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/local_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- 会议信息显示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebRTC 会议"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/participant_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参会人员: 1人"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- 控制面板 -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        android:background="#222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 麦克风开关 -->
        <ImageButton
            android:id="@+id/btn_mute_audio"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_mic_on"
            android:contentDescription="麦克风开关" />

        <!-- 视频开关 -->
        <ImageButton
            android:id="@+id/btn_mute_video"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_videocam_on"
            android:contentDescription="摄像头开关" />

        <!-- 加入/离开房间 -->
        <ImageButton
            android:id="@+id/btn_join_room"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_call"
            android:contentDescription="加入房间" />

        <!-- 挂断 -->
        <ImageButton
            android:id="@+id/btn_hangup"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_call_end"
            android:contentDescription="挂断" />

        <!-- 切换摄像头 -->
        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_switch_camera"
            android:contentDescription="切换摄像头" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>