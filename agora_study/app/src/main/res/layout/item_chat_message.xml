<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 自己的消息 -->
    <LinearLayout
        android:id="@+id/llSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSelfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:background="@drawable/bg_chat_message_self"
            android:text="消息内容"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSelfTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:textColor="#999999"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- 他人的消息 -->
    <LinearLayout
        android:id="@+id/llOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvOtherUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="#007AFF"
            android:textSize="11sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvOtherMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:background="@drawable/bg_chat_message_other"
            android:text="消息内容"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvOtherTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:textColor="#999999"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
